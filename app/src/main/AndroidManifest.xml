<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.loginapiapp">

    <!-- Permiso para hacer peticiones a tu backend -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoginApiApp"
        android:name=".MyApp"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Pantalla principal (login/inicio de sesiÃ³n) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Pantalla de inicio tras login -->
        <activity
            android:name=".HomeActivity"
            android:exported="false" />

        <!-- Nueva pantalla para buscar viajes -->
        <activity
            android:name=".BuscarViajeActivity"
            android:exported="false" />

        <activity
            android:name=".PublicarViajeActivity"
            android:exported="false" />


    </application>

</manifest>
